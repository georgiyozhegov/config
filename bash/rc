#
# ~/.bashrc
#

# If not running interactively, don't do anything
[[ $- != *i* ]] && return

alias ls='ls --color=auto'
alias grep='grep --color=auto'
# PS1='[\u@\h \W]\$ ' # default prompt
PS1='[\W] '

# profile exports are not working
export EDITOR='nvim'

# user alias
alias py='python'
alias ca='cargo'
alias fuck='poweroff'

# ls colors
LS_COLORS=$LS_COLORS:'di=0;32:'
export LS_COLORS

# unlimited history
HISTSIZE=-1
HISTFILESIZE=-1
